        <!-- wrapper  -->
        <!-- ============================================================== -->
        <div class="dashboard-wrapper">
            <div class="dashboard-ecommerce">
                <div class="container-fluid dashboard-content ">
                    <!-- ============================================================== -->
                    <!-- pageheader  -->
                    <!-- ============================================================== -->
                    <div class="row">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <div class="page-header">
                                <h2 class="pageheader-title"><i class="fas fa-tags mr-2"></i> Quản lý Danh mục </h2>
                                <div class="page-breadcrumb">
                                    <nav aria-label="breadcrumb">
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item"><a href="/admin/dashboard" class="breadcrumb-link">Bảng điều khiển</a></li>
                                            <li class="breadcrumb-item active" aria-current="page">Quản lý danh mục</li>
                                        </ol>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- ============================================================== -->
                    <!-- end pageheader  -->
                    <!-- ============================================================== -->
                    
                    <!-- Thống kê nhanh -->
                    <div class="row">
                        <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12 col-12">
                            <div class="card border-3 border-top border-top-primary stats-card">
                                <div class="card-body">
                                    <h5 class="text-muted">Tổng số danh mục</h5>
                                    <div class="metric-value d-inline-block">
                                        <h1 class="mb-1"><%= categories.length %></h1>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12 col-12">
                            <div class="card border-3 border-top border-top-success stats-card">
                                <div class="card-body">
                                    <h5 class="text-muted">Đang hoạt động</h5>
                                    <div class="metric-value d-inline-block">
                                        <% activeCount = categories.filter(cat => cat.status).length %>
                                        <h1 class="mb-1 text-success"><%= activeCount %></h1>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12 col-12">
                            <div class="card border-3 border-top border-top-warning stats-card">
                                <div class="card-body">
                                    <h5 class="text-muted">Đã ẩn</h5>
                                    <div class="metric-value d-inline-block">
                                        <% inactiveCount = categories.filter(cat => !cat.status).length %>
                                        <h1 class="mb-1 text-warning"><%= inactiveCount %></h1>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12 col-12">
                            <div class="card border-3 border-top border-top-info stats-card">
                                <div class="card-body">
                                    <h5 class="text-muted">Trang hiện tại</h5>
                                    <div class="metric-value d-inline-block">
                                        <h1 class="mb-1 text-info"><%= page %>/<%= Math.ceil(categories.length / numberItemPerpage) %></h1>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Thanh công cụ -->
                    <div class="row">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <div class="card">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0">Danh sách danh mục</h5>
                                    <a href="/admin/dashboard/categories-manager/add" class="btn btn-primary btn-sm">
                                        <i class="fas fa-plus mr-1"></i> Thêm danh mục mới
                                    </a>
                                </div>
                                <div class="card-body">
                                    <!-- Thanh tìm kiếm và bộ lọc -->
                                    <div class="row mb-4">
                                        <div class="col-md-6">
                                            <div class="search-box">
                                                <input type="text" class="form-control" placeholder="Tìm kiếm danh mục...">
                                                <i class="fas fa-search"></i>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <select class="form-control">
                                                <option value="">Tất cả trạng thái</option>
                                                <option value="active">Đang hoạt động</option>
                                                <option value="inactive">Đã ẩn</option>
                                            </select>
                                        </div>
                                        <div class="col-md-3">
                                            <select class="form-control">
                                                <option value="">Sắp xếp theo</option>
                                                <option value="name-asc">Tên A-Z</option>
                                                <option value="name-desc">Tên Z-A</option>
                                                <option value="newest">Mới nhất</option>
                                                <option value="oldest">Cũ nhất</option>
                                            </select>
                                        </div>
                                    </div>
                                    
                                    <!-- Danh sách danh mục -->
                                    <div class="row">
                                        <% if (categories && categories.length > 0) { %>
                                            <% 
                                                // Tính toán phân trang
                                                const startIndex = (page - 1) * numberItemPerpage;
                                                const endIndex = Math.min(startIndex + numberItemPerpage, categories.length);
                                                const paginatedCategories = categories.slice(startIndex, endIndex);
                                            %>
                                            
                                            <% paginatedCategories.forEach((category, index) => { %>
                                                <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 col-12">
                                                    <div class="card category-card">
                                                        <div class="position-relative">
                                                            <img src="<%= category.thumbnail %>" class="category-thumbnail" alt="<%= category.typeName %>">
                                                            <span class="badge <%= category.status ? 'badge-success' : 'badge-secondary' %> status-badge">
                                                                <%= category.status ? 'Đang hoạt động' : 'Đã ẩn' %>
                                                            </span>
                                                        </div>
                                                        <div class="card-body">
                                                            <h5 class="card-title"><%= category.typeName %></h5>
                                                            <p class="card-text text-muted small">ID: <%= category._id %></p>
                                                            <div class="category-actions">
                                                                <a href="/admin/dashboard/categories-manager/update/<%= category._id %>" class="btn btn-info btn-sm action-btn">
                                                                    <i class="fas fa-edit mr-1"></i> Sửa
                                                                </a>
                                                                <a href="/admin/dashboard/categories-manager/delete/<%= category._id %>" class="btn btn-danger btn-sm action-btn" onclick="return confirm('Bạn có chắc chắn muốn xóa danh mục này?')">
                                                                    <i class="fas fa-trash mr-1"></i> Xóa
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            <% }) %>
                                        <% } else { %>
                                            <div class="col-12">
                                                <div class="empty-state">
                                                    <i class="fas fa-tags"></i>
                                                    <h3>Chưa có danh mục nào</h3>
                                                    <p>Bắt đầu bằng cách thêm danh mục đầu tiên của bạn.</p>
                                                    <a href="/admin/dashboard/categories-manager/add" class="btn btn-primary mt-3">
                                                        <i class="fas fa-plus mr-1"></i> Thêm danh mục mới
                                                    </a>
                                                </div>
                                            </div>
                                        <% } %>
                                    </div>
                                    
                                    <!-- Phân trang -->
                                    <% if (categories && categories.length > 0) { %>
                                        <div class="pagination-container">
                                            <nav aria-label="Page navigation">
                                                <ul class="pagination">
                                                    <% 
                                                        const totalPages = Math.ceil(categories.length / numberItemPerpage);
                                                        const currentPage = parseInt(page);
                                                        
                                                        // Nút Previous
                                                        if (currentPage > 1) {
                                                    %>
                                                        <li class="page-item">
                                                            <a class="page-link" href="/admin/dashboard/categories-manager/<%= currentPage - 1 %>" aria-label="Previous">
                                                                <span aria-hidden="true">&laquo;</span>
                                                                <span class="sr-only">Trang trước</span>
                                                            </a>
                                                        </li>
                                                    <% } else { %>
                                                        <li class="page-item disabled">
                                                            <a class="page-link" href="#" aria-label="Previous">
                                                                <span aria-hidden="true">&laquo;</span>
                                                                <span class="sr-only">Trang trước</span>
                                                            </a>
                                                        </li>
                                                    <% } %>
                                                    
                                                    <% 
                                                        // Hiển thị các nút trang
                                                        let startPage = Math.max(1, currentPage - 2);
                                                        let endPage = Math.min(totalPages, currentPage + 2);
                                                        
                                                        for (let i = startPage; i <= endPage; i++) {
                                                    %>
                                                        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                                            <a class="page-link" href="/admin/dashboard/categories-manager/<%= i %>"><%= i %></a>
                                                        </li>
                                                    <% } %>
                                                    
                                                    <% 
                                                        // Nút Next
                                                        if (currentPage < totalPages) {
                                                    %>
                                                        <li class="page-item">
                                                            <a class="page-link" href="/admin/dashboard/categories-manager/<%= currentPage + 1 %>" aria-label="Next">
                                                                <span aria-hidden="true">&raquo;</span>
                                                                <span class="sr-only">Trang sau</span>
                                                            </a>
                                                        </li>
                                                    <% } else { %>
                                                        <li class="page-item disabled">
                                                            <a class="page-link" href="#" aria-label="Next">
                                                                <span aria-hidden="true">&raquo;</span>
                                                                <span class="sr-only">Trang sau</span>
                                                            </a>
                                                        </li>
                                                    <% } %>
                                                </ul>
                                            </nav>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- footer -->
            <!-- ============================================================== -->
            <div class="footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                             Copyright © 2023 Amado. All rights reserved. Dashboard by <a href="#">HuuHung</a>.
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                            <div class="text-md-right footer-links d-none d-sm-block">
                                <a href="javascript: void(0);">Về cửa hàng</a>
                                <a href="javascript: void(0);">Hỗ trợ</a>
                                <a href="javascript: void(0);">Liên hệ với chúng tôi</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- end footer -->
            <!-- ============================================================== -->
        </div>
        <!-- ============================================================== -->
        <!-- end wrapper  -->
        <!-- ============================================================== -->
    </div>
