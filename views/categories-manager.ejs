    <!-- Optional JavaScript -->
    <!-- jquery 3.3.1 -->
    <script src="/public/assets/vendor/jquery/jquery-3.3.1.min.js"></script>
    <!-- bootstap bundle js -->
    <script src="/public/assets/vendor/bootstrap/js/bootstrap.bundle.js"></script>
    <!-- slimscroll js -->
    <script src="/public/assets/vendor/slimscroll/jquery.slimscroll.js"></script>
    <!-- main js -->
    <script src="/public/assets/libs/js/main-js.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    
    <script>
        // Hiển thị thông báo từ flash message
        $(document).ready(function() {
            // Lấy message từ thẻ ẩn
            const flashMessage = $('#flashMessage').val();
            if (flashMessage && flashMessage.length > 0) {
                toastr.success(flashMessage, 'Thông báo', {
                    timeOut: 3000, 
                    progressBar: true, 
                    closeButton: true
                });
            }
            
            // Xử lý tìm kiếm danh mục
            $('.search-box input').on('keyup', function() {
                const searchText = $(this).val().toLowerCase();
                $('.category-card').each(function() {
                    const categoryName = $(this).find('.card-title').text().toLowerCase();
                    if (categoryName.includes(searchText)) {
                        $(this).parent().show();
                    } else {
                        $(this).parent().hide();
                    }
                });
            });
            
            // Xử lý lọc theo trạng thái
            $('select').eq(0).on('change', function() {
                const statusFilter = $(this).val();
                $('.category-card').each(function() {
                    const status = $(this).find('.badge').text().trim();
                    if (statusFilter === '' || 
                        (statusFilter === 'active' && status === 'Đang hoạt động') ||
                        (statusFilter === 'inactive' && status === 'Đã ẩn')) {
                        $(this).parent().show();
                    } else {
                        $(this).parent().hide();
                    }
                });
            });
            
            // Xử lý sắp xếp
            $('select').eq(1).on('change', function() {
                const sortBy = $(this).val();
                const container = $('.row').eq(4); // Container chứa danh sách danh mục
                const cards = container.find('.col-xl-4, .col-lg-4, .col-md-6, .col-sm-12, .col-12').get();
                
                cards.sort(function(a, b) {
                    const aName = $(a).find('.card-title').text().toLowerCase();
                    const bName = $(b).find('.card-title').text().toLowerCase();
                    
                    switch(sortBy) {
                        case 'name-asc':
                            return aName.localeCompare(bName);
                        case 'name-desc':
                            return bName.localeCompare(aName);
                        case 'newest':
                            // Giả sử ID có thể dùng để sắp xếp theo thời gian tạo
                            return $(b).find('.card-text').text().localeCompare($(a).find('.card-text').text());
                        case 'oldest':
                            return $(a).find('.card-text').text().localeCompare($(b).find('.card-text').text());
                        default:
                            return 0;
                    }
                });
                
                $.each(cards, function(index, card) {
                    container.append(card);
                });
            });
        });
    </script>
</body>
