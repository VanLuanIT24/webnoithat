    <style>
        :root {
            --primary-color: #4361ee;
            --secondary-color: #3f37c9;
            --success-color: #4cc9f0;
            --danger-color: #f72585;
            --warning-color: #f8961e;
            --info-color: #4895ef;
            --light-color: #f8f9fa;
            --dark-color: #212529;
            --sidebar-width: 250px;
            --header-height: 70px;
            --shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            --transition: all 0.3s ease;
        }
        
        body {
            font-family: 'Circular Std', sans-serif;
            background-color: #f5f7fb;
            overflow-x: hidden;
        }
        
        .dashboard-main-wrapper {
            display: flex;
            min-height: 100vh;
        }
        
        /* Sidebar */
        .nav-left-sidebar {
            width: var(--sidebar-width);
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            box-shadow: var(--shadow);
            transition: var(--transition);
            z-index: 1000;
        }
        
        .nav-left-sidebar .navbar-nav .nav-item .nav-link {
            color: rgba(255, 255, 255, 0.85);
            padding: 12px 20px;
            border-radius: 8px;
            margin: 4px 10px;
            transition: var(--transition);
        }
        
        .nav-left-sidebar .navbar-nav .nav-item .nav-link:hover,
        .nav-left-sidebar .navbar-nav .nav-item .nav-link.active {
            background-color: rgba(255, 255, 255, 0.15);
            color: white;
        }
        
        .nav-left-sidebar .navbar-nav .nav-item .nav-link i {
            margin-right: 10px;
            width: 20px;
            text-align: center;
        }
        
        .nav-left-sidebar .submenu {
            background-color: rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            margin: 5px 15px;
        }
        
        .nav-left-sidebar .submenu .nav-link {
            padding: 8px 15px;
            font-size: 0.9rem;
        }
        
        /* Header */
        .dashboard-header {
            position: fixed;
            top: 0;
            right: 0;
            left: var(--sidebar-width);
            height: var(--header-height);
            background: white;
            box-shadow: var(--shadow);
            z-index: 999;
            transition: var(--transition);
        }
        
        .dashboard-header .navbar {
            padding: 0 20px;
            height: var(--header-height);
        }
        
        .dashboard-header .logo-img {
            height: 40px;
        }
        
        .nav-user-img img {
            border: 2px solid var(--primary-color);
        }
        
        /* Main Content */
        .dashboard-wrapper {
            margin-left: var(--sidebar-width);
            margin-top: var(--header-height);
            padding: 20px;
            width: calc(100% - var(--sidebar-width));
            transition: var(--transition);
        }
        
        .page-header {
            margin-bottom: 25px;
        }
        
        .pageheader-title {
            font-weight: 600;
            color: var(--dark-color);
            margin-bottom: 5px;
        }
        
        /* Cards */
        .card {
            border: none;
            border-radius: 12px;
            box-shadow: var(--shadow);
            margin-bottom: 25px;
            transition: var(--transition);
        }
        
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }
        
        .card-header {
            background: white;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
            padding: 15px 20px;
            border-radius: 12px 12px 0 0 !important;
        }
        
        .card-header h5 {
            font-weight: 600;
            color: var(--dark-color);
            margin: 0;
        }
        
        .card-body {
            padding: 20px;
        }
        
        /* Stats Cards */
        .stats-card {
            position: relative;
            overflow: hidden;
        }
        
        .stats-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: linear-gradient(90deg, var(--primary-color), var(--success-color));
        }
        
        .stats-card .metric-value h1 {
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 5px;
        }
        
        .stats-card .text-muted {
            font-size: 0.9rem;
            font-weight: 500;
        }
        
        .stats-card .card-icon {
            position: absolute;
            right: 20px;
            top: 20px;
            font-size: 2rem;
            opacity: 0.2;
        }
        
        /* Charts */
        .chart-container {
            position: relative;
            height: 300px;
            width: 100%;
        }
        
        /* Tables */
        .table th {
            border-top: none;
            font-weight: 600;
            color: var(--dark-color);
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .table td {
            vertical-align: middle;
            font-size: 0.9rem;
        }
        
        .table-responsive {
            border-radius: 8px;
        }
        
        /* Status Badges */
        .badge {
            padding: 6px 10px;
            font-size: 0.75rem;
            font-weight: 600;
            border-radius: 20px;
        }
        
        .badge-pending {
            background-color: #fff3cd;
            color: #856404;
        }
        
        .badge-confirmed {
            background-color: #d1ecf1;
            color: #0c5460;
        }
        
        .badge-shipping {
            background-color: #d4edda;
            color: #155724;
        }
        
        .badge-delivered {
            background-color: #e2e3e5;
            color: #383d41;
        }
        
        .badge-cancelled {
            background-color: #f8d7da;
            color: #721c24;
        }
        
        /* Footer */
        .footer {
            background: white;
            padding: 20px;
            margin-top: 30px;
            border-radius: 12px;
            box-shadow: var(--shadow);
        }
        
        /* Responsive */
        @media (max-width: 992px) {
            .nav-left-sidebar {
                transform: translateX(-100%);
                position: fixed;
                height: 100vh;
            }
            
            .nav-left-sidebar.active {
                transform: translateX(0);
            }
            
            .dashboard-header {
                left: 0;
            }
            
            .dashboard-wrapper {
                margin-left: 0;
                width: 100%;
            }
            
            .mobile-menu-toggle {
                display: block;
            }
        }
        
        /* Animations */
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .fade-in {
            animation: fadeIn 0.5s ease forwards;
        }
        
        /* Custom Scrollbar */
        ::-webkit-scrollbar {
            width: 6px;
        }
        
        ::-webkit-scrollbar-track {
            background: #f1f1f1;
        }
        
        ::-webkit-scrollbar-thumb {
            background: var(--primary-color);
            border-radius: 10px;
        }
        
        ::-webkit-scrollbar-thumb:hover {
            background: var(--secondary-color);
        }
        
        /* Progress Bars */
        .progress {
            height: 8px;
            border-radius: 10px;
            margin-bottom: 10px;
        }
        
        .progress-bar {
            border-radius: 10px;
        }
        
        /* Loading Spinner */
        .spinner-border-sm {
            width: 1rem;
            height: 1rem;
        }
        
        /* Custom Toggle */
        .custom-toggle {
            position: relative;
            display: inline-block;
            width: 50px;
            height: 24px;
        }
        
        .custom-toggle input {
            opacity: 0;
            width: 0;
            height: 0;
        }
        
        .custom-toggle-slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            transition: .4s;
            border-radius: 34px;
        }
        
        .custom-toggle-slider:before {
            position: absolute;
            content: "";
            height: 16px;
            width: 16px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }
        
        input:checked + .custom-toggle-slider {
            background-color: var(--primary-color);
        }
        
        input:checked + .custom-toggle-slider:before {
            transform: translateX(26px);
        }
    </style>
</head>

