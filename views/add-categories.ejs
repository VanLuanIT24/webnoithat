    <script>
        $(document).ready(function() {
            // Xử lý hiển thị preview hình ảnh
            $('#thumbnail').on('change', function() {
                const file = this.files[0];
                if (file) {
                    const reader = new FileReader();
                    
                    reader.onload = function(e) {
                        $('#previewImage').attr('src', e.target.result);
                        $('#previewImage').show();
                        $('.upload-icon').hide();
                        $('.upload-text').text('Hình ảnh đã chọn: ' + file.name);
                    }
                    
                    reader.readAsDataURL(file);
                }
            });
            
            // Cho phép kéo thả file
            $('#thumbnailPreview').on('dragover', function(e) {
                e.preventDefault();
                e.stopPropagation();
                $(this).css('border-color', '#4e73df');
                $(this).css('background-color', '#f8f9fe');
            });
            
            $('#thumbnailPreview').on('dragleave', function(e) {
                e.preventDefault();
                e.stopPropagation();
                $(this).css('border-color', '#d1d3e2');
                $(this).css('background-color', 'transparent');
            });
            
            $('#thumbnailPreview').on('drop', function(e) {
                e.preventDefault();
                e.stopPropagation();
                $(this).css('border-color', '#d1d3e2');
                $(this).css('background-color', 'transparent');
                
                const files = e.originalEvent.dataTransfer.files;
                if (files.length > 0) {
                    $('#thumbnail')[0].files = files;
                    $('#thumbnail').trigger('change');
                }
            });
            
            // Xử lý toggle trạng thái
            $('#status').on('change', function() {
                if ($(this).is(':checked')) {
                    $('#statusText').text('Đang hoạt động');
                    $('#statusHidden').val('true');
                } else {
                    $('#statusText').text('Đã ẩn');
                    $('#statusHidden').val('false');
                }
            });

            // Khởi tạo giá trị ban đầu
            $('#statusHidden').val('true');
            
            // Xử lý form submission
            $('#addCategoryForm').on('submit', function(e) {
                // Kiểm tra các trường bắt buộc
                const name = $('#name').val().trim();
                const thumbnail = $('#thumbnail').val();
                
                if (!name) {
                    e.preventDefault();
                    toastr.error('Vui lòng nhập tên danh mục', 'Lỗi');
                    $('#name').focus();
                    return false;
                }
                
                if (!thumbnail) {
                    e.preventDefault();
                    toastr.error('Vui lòng chọn hình ảnh cho danh mục', 'Lỗi');
                    return false;
                }
                
                // Hiển thị thông báo đang xử lý
                toastr.info('Đang xử lý thêm danh mục...', 'Thông báo', {timeOut: 0});
                
                // Form sẽ được submit bình thường sau khi kiểm tra
            });
            
            // Click vào preview để mở file picker
            $('#thumbnailPreview').on('click', function() {
                $('#thumbnail').click();
            });
        });
    </script>
