<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="/public/assets/vendor/bootstrap/css/bootstrap.min.css">
    <link href="/public/assets/vendor/fonts/circular-std/style.css" rel="stylesheet">
    <link rel="stylesheet" href="/public/assets/libs/css/style.css">
    <link rel="stylesheet" href="/public/assets/vendor/fonts/fontawesome/css/fontawesome-all.css">
    <link rel="stylesheet" href="/public/assets/vendor/fonts/material-design-iconic-font/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
    <title>Quản lý người dùng - Amado</title>
    <link rel="icon" href="/public/img/core-img/favicon.ico" />
</head>

<body>
    <div class="dashboard-main-wrapper">
        <!-- Navbar -->
        <div class="dashboard-header">
            <nav class="navbar navbar-expand-lg bg-white fixed-top">
                <a class="navbar-brand" href="/admin/dashboard"><img class="logo-img" src="/public/img/core-img/logo.png" alt="logo"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse " id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto navbar-right-top">
                        <li class="nav-item dropdown nav-user">
                            <a class="nav-link nav-user-img" href="#" id="navbarDropdownMenuLink2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><img src="<%= customer.avatar %>" alt="" class="user-avatar-md rounded-circle"></a>
                            <div class="dropdown-menu dropdown-menu-right nav-user-dropdown" aria-labelledby="navbarDropdownMenuLink2">
                                <div class="nav-user-info">
                                    <% let fullName = customer.fullNameCustomer.firstName + " " + customer.fullNameCustomer.lastName; %>
                                    <h5 class="mb-0 text-white nav-user-name"><%= fullName %></h5>
                                </div>
                                <a class="dropdown-item" href="#"><i class="fas fa-user mr-2"></i>Account</a>
                                <a class="dropdown-item" href="/admin/dashboard/logout"><i class="fas fa-power-off mr-2"></i>Logout</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>

        <!-- Sidebar -->
        <div class="nav-left-sidebar sidebar-dark">
            <div class="menu-list">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav flex-column">
                            <li class="nav-divider">Menu</li>
                            <li class="nav-item ">
                                <a class="nav-link active" href="#" data-toggle="collapse" aria-expanded="false" data-target="#submenu-1" aria-controls="submenu-1"><i class="fa fa-fw fa-user-circle"></i>Dashboard</a>
                                <div id="submenu-1" class="collapse submenu show">
                                    <ul class="nav flex-column">
                                        <li class="nav-item">
                                            <a class="nav-link" href="/admin/dashboard">Tổng quan</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/admin/dashboard/categories-manager">Quản lý danh mục</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/admin/dashboard/products-manager">Quản lý sản phẩm</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#" data-toggle="collapse" aria-expanded="false" data-target="#submenu-1-2" aria-controls="submenu-1-2">Quản lý đơn hàng</a>
                                            <div id="submenu-1-2" class="collapse submenu show">
                                                <ul class="nav flex-column">
                                                    <li class="nav-item">
                                                        <a class="nav-link" href="/admin/dashboard/pending-orders-manager">Chờ xác nhận</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a class="nav-link" href="/admin/dashboard/orders-manager">Tình trạng đơn hàng</a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link active" href="/admin/dashboard/users-manager">Quản lý người dùng</a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>

        <!-- Main Content -->
        <div class="dashboard-wrapper">
            <div class="dashboard-ecommerce">
                <div class="container-fluid dashboard-content ">
                    <!-- Page Header -->
                    <div class="row">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <div class="page-header">
                                <h2 class="pageheader-title">Quản lý người dùng</h2>
                                <div class="page-breadcrumb">
                                    <nav aria-label="breadcrumb">
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item"><a href="/admin/dashboard" class="breadcrumb-link">Dashboard</a></li>
                                            <li class="breadcrumb-item active" aria-current="page">Quản lý người dùng</li>
                                        </ol>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Users Table -->
                    <div class="row">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <div class="card">
                                <h5 class="card-header">Danh sách người dùng</h5>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered first">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Avatar</th>
                                                    <th>Họ tên</th>
                                                    <th>Email</th>
                                                    <th>Số điện thoại</th>
                                                    <th>CMND</th>
                                                    <th>Ngày tạo</th>
                                                    <th>Trạng thái</th>
                                                    <th>Thao tác</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% users.forEach((user, index) => { %>
                                                    <tr>
                                                        <td><%= (page - 1) * numberItemPerpage + index + 1 %></td>
                                                        <td>
                                                            <img src="<%= user.avatar || '/uploads/user-01.png' %>" alt="Avatar" class="rounded-circle" width="40" height="40">
                                                        </td>
                                                        <td><%= user.fullNameCustomer.firstName %> <%= user.fullNameCustomer.lastName %></td>
                                                        <td><%= user.email %></td>
                                                        <td><%= user.phoneNumber %></td>
                                                        <td><%= user.identityCardNumber %></td>
                                                        <td><%= new Date(user.createdAt).toLocaleDateString('vi-VN') %></td>
                                                        <td>
                                                            <% if(user.loginInformation.status !== false) { %>
                                                                <span class="badge badge-success">Hoạt động</span>
                                                            <% } else { %>
                                                                <span class="badge badge-danger">Đã khóa</span>
                                                            <% } %>
                                                        </td>
                                                        <td>
                                                            <div class="btn-group" role="group">
                                                                <a href="/admin/dashboard/users-manager/update/<%= user._id %>" class="btn btn-primary btn-sm">
                                                                    <i class="fas fa-edit"></i>
                                                                </a>
                                                                <% if(user.loginInformation.status !== false) { %>
                                                                    <a href="/admin/dashboard/users-manager/block/<%= user._id %>" class="btn btn-warning btn-sm" 
                                                                       onclick="return confirm('Bạn có chắc muốn khóa người dùng này?')">
                                                                        <i class="fas fa-lock"></i>
                                                                    </a>
                                                                <% } else { %>
                                                                    <a href="/admin/dashboard/users-manager/block/<%= user._id %>" class="btn btn-success btn-sm" 
                                                                       onclick="return confirm('Bạn có chắc muốn mở khóa người dùng này?')">
                                                                        <i class="fas fa-unlock"></i>
                                                                    </a>
                                                                <% } %>
                                                                <a href="/admin/dashboard/users-manager/delete/<%= user._id %>" class="btn btn-danger btn-sm" 
                                                                   onclick="return confirm('Bạn có chắc muốn xóa người dùng này?')">
                                                                    <i class="fas fa-trash"></i>
                                                                </a>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                <% }) %>
                                            </tbody>
                                        </table>
                                    </div>

                                    <!-- Pagination -->
                                    <% if(users.length > numberItemPerpage) { %>
                                        <nav aria-label="Page navigation">
                                            <ul class="pagination justify-content-center">
                                                <% 
                                                const totalPages = Math.ceil(users.length / numberItemPerpage);
                                                const currentPage = parseInt(page);
                                                %>
                                                
                                                <% if(currentPage > 1) { %>
                                                    <li class="page-item">
                                                        <a class="page-link" href="/admin/dashboard/users-manager/<%= currentPage - 1 %>">Trước</a>
                                                    </li>
                                                <% } %>
                                                
                                                <% for(let i = 1; i <= totalPages; i++) { %>
                                                    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                                        <a class="page-link" href="/admin/dashboard/users-manager/<%= i %>"><%= i %></a>
                                                    </li>
                                                <% } %>
                                                
                                                <% if(currentPage < totalPages) { %>
                                                    <li class="page-item">
                                                        <a class="page-link" href="/admin/dashboard/users-manager/<%= currentPage + 1 %>">Sau</a>
                                                    </li>
                                                <% } %>
                                            </ul>
                                        </nav>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer -->
            <div class="footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                            Copyright © 2024 Concept. All rights reserved. Dashboard by <a href="#">VanLuanIT2004</a>.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="/public/assets/vendor/jquery/jquery-3.3.1.min.js"></script>
    <script src="/public/assets/vendor/bootstrap/js/bootstrap.bundle.js"></script>
    <script src="/public/assets/vendor/slimscroll/jquery.slimscroll.js"></script>
    <script src="/public/assets/libs/js/main-js.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    
    <% if(message && message.length > 0){ %>
        <script>
            toastr.success('<%= message %>','Thông báo', {timeOut: 1500, progressBar: true, closeButton: true});
        </script>
    <% } %>
</body>
</html>