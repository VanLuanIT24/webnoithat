    <script>
        $(document).ready(function() {
            // Lấy dữ liệu từ data attributes
            function getCustomerData() {
                const dataContainer = $('#customer-data');
                return {
                    avatar: dataContainer.data('avatar') || '/public/assets/images/avatar-default.png',
                    firstName: dataContainer.data('firstname') || '',
                    lastName: dataContainer.data('lastname') || '',
                    email: dataContainer.data('email') || '',
                    phone: dataContainer.data('phone') || '',
                    address: dataContainer.data('address') || '',
                    dateOfBirth: dataContainer.data('dob') || '',
                    sex: dataContainer.data('sex') || 'Nam',
                    identityCardNumber: dataContainer.data('identity') || ''
                };
            }

            // Populate customer data
            function populateCustomerData() {
                const customerData = getCustomerData();
                
                // Navbar
                $('#navbar-avatar').attr('src', customerData.avatar);
                $('#navbar-fullname').text(customerData.firstName + ' ' + customerData.lastName);
                
                // Profile card
                $('#profile-avatar').attr('src', customerData.avatar);
                $('#profile-fullname').text(customerData.firstName + ' ' + customerData.lastName);
                $('#profile-email').text(customerData.email);
                $('#profile-phone').text(customerData.phone);
                $('#profile-address').text(customerData.address);
                
                // Form fields
                $('#firstname').val(customerData.firstName);
                $('#lastname').val(customerData.lastName);
                $('#email').val(customerData.email);
                $('#phoneNumber').val(customerData.phone);
                $('#dateOfBirth').val(customerData.dateOfBirth);
                $('#sex').val(customerData.sex);
                $('#identityCardNumber').val(customerData.identityCardNumber);
                $('#address').val(customerData.address);
            }

            // Initialize data
            populateCustomerData();

            // Các hàm xử lý khác giữ nguyên
            $('.custom-file-input').on('change', function() {
                let fileName = $(this).val().split('\\').pop();
                $(this).next('.custom-file-label').addClass("selected").html(fileName);
            });
            
            $('#myTab a').on('click', function (e) {
                e.preventDefault();
                $(this).tab('show');
            });
            
            $('form[action*="change-password"]').on('submit', function(e) {
                const newPassword = $('#newPassword').val();
                const confirmPassword = $('#confirmPassword').val();
                
                if (newPassword !== confirmPassword) {
                    e.preventDefault();
                    toastr.error('Mật khẩu mới không khớp!', 'Lỗi');
                    return false;
                }
                
                if (newPassword.length < 6) {
                    e.preventDefault();
                    toastr.error('Mật khẩu phải có ít nhất 6 ký tự!', 'Lỗi');
                    return false;
                }
            });

            $('form[action*="/admin/dashboard/account/update"]').on('submit', function(e) {
                const email = $('#email').val();
                const phone = $('#phoneNumber').val();
                
                if (!isValidEmail(email)) {
                    e.preventDefault();
                    toastr.error('Email không hợp lệ!', 'Lỗi');
                    return false;
                }
                
                if (!isValidPhone(phone)) {
                    e.preventDefault();
                    toastr.error('Số điện thoại không hợp lệ!', 'Lỗi');
                    return false;
                }
            });

            function isValidEmail(email) {
                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                return emailRegex.test(email);
            }

            function isValidPhone(phone) {
                const phoneRegex = /^(0|\+84)[3|5|7|8|9][0-9]{8}$/;
                return phoneRegex.test(phone);
            }

            // Hiển thị thông báo từ flash messages
            const message = '<%= message %>';
            if (message && message.length > 0) {
                if (message.includes('thành công')) {
                    toastr.success(message, 'Thành công', {timeOut: 3000, progressBar: true, closeButton: true});
                } else {
                    toastr.error(message, 'Lỗi', {timeOut: 3000, progressBar: true, closeButton: true});
                }
            }
        });
    </script>
