    <script>
        // Hiệu ứng loading
        function showLoading() {
            $('.loading-overlay').fadeIn();
        }
        
        function hideLoading() {
            $('.loading-overlay').fadeOut();
        }
        
        // Xác nhận hành động
        function confirmAction(action, orderId) {
            return confirm(`Bạn có chắc chắn muốn ${action} đơn hàng ${orderId}?`);
        }
        
        // Tìm kiếm và lọc
        $(document).ready(function() {
            $('#searchOrder').on('keyup', function() {
                const value = $(this).val().toLowerCase();
                filterOrders();
            });
            
            $('#statusFilter').on('change', function() {
                filterOrders();
            });
            
            function filterOrders() {
                const searchValue = $('#searchOrder').val().toLowerCase();
                const statusValue = $('#statusFilter').val();
                
                $('#ordersTable tbody tr').each(function() {
                    const customerName = $(this).data('customer').toLowerCase();
                    const status = $(this).data('status');
                    
                    const nameMatch = customerName.includes(searchValue);
                    const statusMatch = statusValue === '' || status === statusValue;
                    
                    if (nameMatch && statusMatch) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });
            }
            
            // Hiệu ứng hover cho card
            $('.card').hover(
                function() {
                    $(this).css('transform', 'translateY(-5px)');
                },
                function() {
                    $(this).css('transform', 'translateY(0)');
                }
            );
            
            // Hiệu ứng click cho action buttons
            $('.action-btn').on('click', function() {
                showLoading();
                setTimeout(hideLoading, 500);
            });
            
            // Tooltip cho mã đơn hàng
            $('.order-id').hover(function() {
                $(this).attr('title', $(this).parent().find('.order-id').attr('title'));
            });
        });
    </script>
    
